<h1>Login</h1>

<%= form_with url: login_path, method: :post, local: true do %>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag 'Log in' %>
  </div>

  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>
<% end %>
